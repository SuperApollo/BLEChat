<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--实心填充色-->
    <solid android:color="@color/white" />
    <!-- 渐变-->
    <gradient
        android:angle="270"
        android:endColor="@color/grey_transparent"
        android:startColor="@color/grey_transparent" />
    <!--圆角-->
    <corners android:radius="8dp" />
    <!--描边-->
    <stroke
        android:width="0.5dp"
        android:color="@color/white" />
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
</shape>