<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_transparent" />

    <RadioGroup
        android:id="@+id/rg_bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_item_device_list"
            style="@style/tab_menu_item"
            android:drawableTop="@mipmap/icon_tab_item_devicelist"
            android:text="@string/tab_item_devicelist" />

        <RadioButton
            android:id="@+id/rb_item_contact"
            style="@style/tab_menu_item"
            android:drawableTop="@mipmap/icon_tab_item_contact"
            android:text="@string/tab_item_contact" />

        <RadioButton
            android:id="@+id/rb_item_transport"
            style="@style/tab_menu_item"
            android:drawableTop="@mipmap/icon_tab_item_transport"
            android:text="@string/tab_item_transport" />

        <RadioButton
            android:id="@+id/rb_item_more"
            style="@style/tab_menu_item"
            android:drawableTop="@mipmap/icon_tab_item_more"
            android:text="@string/tab_item_more" />

    </RadioGroup>
</LinearLayout>